@model Employee_timesheet.Models.Timesheet

@{
    ViewData["Title"] = "Delete";
}





<style>
    body {
        background-color: #f5f7fa;
    }

    .blockquote-custom {
        position: relative;
        font-size: 1.1rem;
    }

    .blockquote-custom-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: -40px;
        left: 19px;
    }
</style>


<div>
    <h4>Are you sure you want to delete this Timesheet</h4>

    <hr />

</div>




<div class="container">
    <section class="mx-auto my-5" style="max-width: 43rem;">

        <div class="card">
            <div class="card-body">
                <blockquote class="blockquote blockquote-custom bg-white px-3 pt-4">
                    <div class="blockquote-custom-icon bg-danger shadow-1-strong">
                        <i class="fa fa-quote-left text-white"></i>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Date)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Type)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Type)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.TotalHoursWorked)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.TotalHoursWorked)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        @if (Model.Status == true)
                        {
                            <dd class="col-sm-8">
                                <span class="text-success">Approved</span>
                            </dd>
                        }
                        else if (Model.Status == false)
                        {
                            <dd class="col-sm-8">
                                <span class="text-danger">Rejected</span>
                            </dd>
                        }
                        else
                        {
                            <dd class="col-sm-8">
                                <span class="text-info">Pending</span>
                            </dd>
                        }

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Employee)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Employee.EmployeeName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Project)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Project.ProjectName)
                        </dd>
                        @if (Model.Project.ProjectId == "PRO000")
                        {
                            <dt class="col-sm-4">
                                @*@Html.DisplayNameFor(model => model.Task)*@Leave Type
                            </dt>
                        }
                        else
                        {
                            <dt class="col-sm-4">
                                @*@Html.DisplayNameFor(model => model.Task)*@ Task
                            </dt>
                        }
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Task.TaskName)
                        </dd>
                    </dl>
                    <footer class=" pt-4 mt-4 border-top">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="TimesheetId" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="EmployeeIndex" class="text-warning" style="font-size:30px;padding-left:10px;"><i class="fa-solid fa-backward"></i></a>
                        </form>
                    </footer>
                </blockquote>
            </div>
        </div>

    </section>
</div>




